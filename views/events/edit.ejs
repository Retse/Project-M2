<section id="events-edit">
<a href="/events/<%= event._id %>">Go Back</a>
  <form class="events-form" method="POST" action="/events/<%= event._id %>">
    <div class="form-field" >
      <label>Title</label>
      <input type="text" name="title" value="<%= event.title %>"/>
    </div>
    <div class="form-field" >
      <label>Image</label>
      <input type="text" name="image" value="<%= event.image %>"/>
    </div>
    <div class="form-field" >
      <label>Date</label>
      <input type="date" name="date" value="<%= event.date %>"/>
    </div>
    <div class="form-field" >
      <label>City</label>
      <input type="text" name="city" value="<%= event.location.city  %>"/>
    </div>
    <div class="form-field" >
      <label>Region</label>
      <input type="text" name="region" value="<%= event.location.region %>"/>
     </div>
    <div class="form-field" >
      <label>Country</label>
      <input type="text" name="country" value="<%= event.location.country %>"/>
    </div>
    <div class="form-field" >
      <label>Starting Point</label>
      <input type="text" name="startingPoint" value="<%= event.startingPoint %>"/>
    </div>
    <div class="form-field" >
      <label>Description</label>
      <input class="description" type="text" name="description" value="<%= event.description %>"/>
    </div>
    <div class="form-field" >
      <label>Difficulty level</label>
      <div class="radio-input">
        <label>Easy</label>
        <input type="radio" id="easy" name="difficultyLevel" value="easy"/>
      </div>
      <div class="radio-input">
        <label>Medium</label>
        <input type="radio" id="medium" name="difficultyLevel" value="medium"/>
      </div>
      <div class="radio-input">
        <label>Hard</label>
        <input type="radio" id="hard" name="difficultyLevel" value="hard"/>
      </div> 
    </div>
    <div class="form-field" >
      <label>Duration</label>
      <input type="number" name="duration" value="<%= event.duration %>"/>
    </div>
    <div class="form-field" >
      <label>Distance</label>
      <input type="number" name="distance" value="<%= event.distance %>"/>
    </div>
    <div class="field submit">
      <button type="submit">Edit</button>
    </div>
  </form>
  <%- include ../partials/navbar.ejs %>
</section>
