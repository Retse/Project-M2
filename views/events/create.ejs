<%- include ../partials/events/events-navbar.ejs %> 
<section id="events-create">
  <%- include ../partials/notifications.ejs %> 
  <form class="create-form" method="POST" action="/events/create">
    <div class="edit form-field" >
      <label>Title *</label>
       <input class="edit-create" type="text" name="title" placeholder="introduce event name"/>
    </div>
    <div class="edit form-field" >
      <label>Image</label>
       <input class="edit-create" type="text" name="image" placeholder="image url"/>
    </div>
    <div class="edit form-field" >
      <label>Date *</label>
       <input class="edit-create" type="date" name="date"/>
    </div>
    <div class="edit form-field" >
      <label>City *</label>
       <input class="edit-create" type="text" name="city" placeholder="introduce city"/>
    </div>
    <div class="edit form-field" >
      <label>Region</label>
       <input class="edit-create" type="text" name="region" placeholder="introduce region"/>
     </div>
    <div class="edit form-field" >
      <label>Country</label>
       <input class="edit-create" type="text" name="country" placeholder="introduce country"/>
    </div>
    <div class="edit form-field" >
      <label>Starting Point</label>
       <input class="edit-create" type="text" name="startingPoint" placeholder="introduce route's starting point"/>
    </div>
    <div class="edit form-field" >
      <label>Description *</label>
       <input class="description edit-create" type="text" name="description" placeholder="introduce event's description"/>
    </div>
    <div class="edit form-field" >
      <label>Difficulty level</label>
      <div class="radio-input">
        <label>Easy</label>
         <input class="edit-create" type="radio" id="easy" name="difficultyLevel" value="easy"/>
      </div>
      <div class="radio-input">
        <label>Medium</label>
         <input class="edit-create" type="radio" id="medium" name="difficultyLevel" value="medium"/>
      </div>
      <div class="radio-input">
        <label>Hard</label>
         <input class="edit-create" type="radio" id="hard" name="difficultyLevel" value="hard"/>
      </div> 
    </div>
    <div class="edit form-field" >
      <label>Duration</label>
       <input class="edit-create" type="number" name="duration" placeholder="introduce time in hours"/>
    </div>
    <div class="edit form-field" >
      <label>Distance</label>
       <input class="edit-create" type="number" name="distance" placeholder="introduce distance in km"/>
    </div>
    <div class="field submit-create">
      <button class="create"type="submit">Create</button>
    </div>
  </form>
  <%- include ../partials/navbar.ejs %>
</section>
